---
// Timeline.astro
const jobs = [
  {
    title: "Software Developer Intern",
    company: "CodeArts Solutions S.L.",
    date: "March 2025 - Present",
    description: "I am currently completing my DAM internship at CodeArts Solutions S.L. I am learning about cross-platform development and gaining experience in a professional environment!"
  }
];
---

<style>
    .timeline {
      position: relative;
      max-width: 800px;
      margin: 0 auto;
      padding: 40px 20px;
    }
  
    /* Línea del timeline */
    .timeline::after {
      content: '';
      position: absolute;
      width: 4px;
      background: linear-gradient(to bottom, #6e36aa, #0c0c0c);
      top: 0;
      bottom: 0;
      left: 20px; /* Línea a la izquierda */
      z-index: 1;
    }
  
    /* Contenedor de cada item */
    .timeline-item {
      padding: 20px;
      position: relative;
      width: 100%;
      padding-left: 50px; /* Espacio para la línea y el círculo */
    }
  
    /* Círculo indicador */
    .timeline-item::after {
      content: '';
      position: absolute;
      width: 20px;
      height: 20px;
      left: -8px; /* Centrado sobre la línea */
      background-color: #fff;
      border: 4px solid #6e36aa;
      top: 20px;
      border-radius: 50%;
      z-index: 3;
      box-shadow: 0 0 10px rgba(110, 54, 170, 0.3);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
  
    /* Contenido de cada item */
    .timeline-content {
      padding: 20px;
      background-color: #ffffff;
      border-radius: 12px;
      box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      z-index: 2;
    }
  
    /* Efecto hover en el contenido */
    .timeline-content:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }
  
    /* Título */
    .timeline-content h3 {
      margin-top: 0;
      color: #8638c5;
      font-size: 1.5em;
      font-weight: 600;
    }
  
    /* Fecha y empresa */
    .timeline-content p {
      margin: 10px 0 0;
      color: #424242;
      line-height: 1.6;
    }
  
    /* Empresa en negrita */
    .timeline-content strong {
      color: #000000;
    }
  
    /* Animación del círculo al hacer hover */
    .timeline-item:hover::after {
      transform: scale(1.2);
      box-shadow: 0 0 15px rgba(110, 54, 170, 0.5);
    }
  </style>
  
<div class="timeline">
  {jobs.map((job, index) => (
    <div class="timeline-item">
      <div class="timeline-content">
        <h3>{job.title}</h3>
        <p><strong>{job.company}</strong> - {job.date}</p>
        <p>{job.description}</p>
      </div>
    </div>
  ))}
</div>