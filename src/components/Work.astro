---
const jobs = [
  {
    title: "Software & Mobile App Developer Intern",
    company: "CodeArts Solutions S.L.",
    date: "Mar 2025 â€“ Jun 2025",
    description: [
      "Enhanced DPTelemetry app UI and features (C#, Unity, PostgreSQL).",
      "API testing, bug fixing, and GitHub documentation.",
      "Supported banking systems and web app foundations.",
    ],
  },
];
---

<section class="work-experience-alt">
  <div class="work-experience-cards">
    {jobs.map((job) => (
      <div class="work-card">
        <div class="work-card-header">
          <div class="work-card-icon">
            <svg width="36" height="36" viewBox="0 0 36 36" fill="none">
              <circle cx="18" cy="18" r="18" fill="#6366f1" />
              <path d="M12 24V16.5C12 15.1193 13.1193 14 14.5 14H21.5C22.8807 14 24 15.1193 24 16.5V24" stroke="#fff" stroke-width="2" stroke-linecap="round"/>
              <rect x="15" y="18" width="6" height="6" rx="1" fill="#fff"/>
            </svg>
          </div>
          <div>
            <h3 class="work-card-role">{job.title}</h3>
            <span class="work-card-company">{job.company}</span>
          </div>
        </div>
        <div class="work-card-body">
          <span class="work-card-date">{job.date}</span>
          <ul class="work-card-desc">
            {job.description.map(line => (
              <li>{line}</li>
            ))}
          </ul>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
.work-experience-alt {
  max-width: 900px;
  margin: 0 auto;
  padding: 3rem 1.5rem 0 1.5rem;
}
.work-experience-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 2.2rem;
}
.work-card {
  background: linear-gradient(135deg, #3c1e81 0%, #4b307e 60%, #1e1b4b 100%);
  border-radius: 1.5rem;
  box-shadow: 0 2px 24px 0 #6366f122;
  padding: 2rem 1.5rem 1.5rem 1.5rem;
  display: flex;
  flex-direction: column;
  transition: box-shadow 0.2s, transform 0.2s, border 0.2s;
  border: 1.5px solid #6d28d9;
  position: relative;
  overflow: hidden;
}
.work-card:hover {
  box-shadow: 0 8px 36px 0 #7c3aed55;
  transform: translateY(-6px) scale(1.025);
  border: 2px solid #7c3aed;
}
.work-card-header {
  display: flex;
  align-items: center;
  gap: 1.2rem;
  margin-bottom: 1.2rem;
  position: relative;
  z-index: 1;
}
.work-card-icon {
  background: #18181b;
  border-radius: 50%;
  padding: 0.4rem;
  box-shadow: 0 2px 8px 0 #a78bfa33;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid #a78bfa;
}
.work-card-role {
  color: #fff;
  font-size: 1.22rem;
  font-weight: 700;
  margin: 0 0 0.2rem 0;
  letter-spacing: 0.01em;
}
.work-card-company {
  color: #c4b5fd;
  font-size: 1.08rem;
  font-weight: 700;
}
.work-card-body {
  display: flex;
  flex-direction: column;
  gap: 0.7rem;
  position: relative;
  z-index: 1;
}
.work-card-date {
  color: #a78bfa;
  font-size: 1.02rem;
  font-weight: 600;
  margin-bottom: 0.2rem;
}
.work-card-desc {
  color: #ede9fe;
  font-size: 1rem;
  padding-left: 1.1rem;
  list-style: disc;
  line-height: 1.7;
  margin: 0;
}
@media (max-width: 700px) {
  .work-experience-alt {
    padding: 1.5rem 0.5rem 0 0.5rem;
  }
  .work-experience-cards {
    grid-template-columns: 1fr;
    gap: 1.2rem;
  }
  .work-card {
    padding: 1.2rem 1rem;
  }
}
</style>
