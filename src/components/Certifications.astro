---
const certifications = [
  /*{ name: "Microsoft Security, Compliance, and Identity Fundamentals Certification", issuer: "Microsoft", year: 2025 },*/
  /*{ name: "Computer Security Auditing", issuer: "MainJobs", year: 2025 },*/
  { name: "Artificial Intelligence Fundammentals", issuer: "IBM", year: 2024 },
  { name: "GL Project Management with Agile Methodologies and Lean Approaches", issuer: "Fundación Telefónica", year: 2024 },
  { name: "Web Design with HTML5 + CSS", issuer: "Fundación Telefónica", year: 2024 },
  { name: "Programación con JavaScript", issuer:"Fundación Telefónica", year: 2024},

  
];
---

<section class="text-xl mt-5">
    <h2 class="text-xl font-bold mb-5 text-violet-400 border-b-2 border-violet-400 animate-pulse">Certifications</h2>
    <ul class="list-none text-base space-y-4">
        {certifications.map(cert => (
            <li class="mb-4">
                <span class="text-white">{cert.name}</span>
                <span class="text-violet-400">- Issued by {cert.issuer} - {cert.year}</span>
            </li>
        ))}
    </ul>
</section>